{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  <h1>{{name}}</h1>
</div>
<div>
  <b>{{birthdate}}</b>
</div>
<div>
  <b>{{birthplace}}</b>
</div>
<div>
  <b>{{deathdate:}}</b>
</div>
<div>
  <b>{{nationality}}</b>
</div>
<div>
  <b>{{occupation}}</b>
</div>
<div>
  <b>Known:</b>
</div>
<div>
  <ul>
    {{#each known_for}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
</div>

<br />
<hr />

<section>
  <div>
    <h2>Education:</h2>
  </div>
  <div>
    {{#each education}}
      <p>University: "{{institution}}"</p>
      <p>Direction: "{{field}}"</p>
      <p>Degree: "{{degree}}"</p>
      <p>Graduation year: {{year}}</p>
    {{/each}}
  </div>
</section>

<hr />

<section>
  <div>
    <h2>Notable publications:</h2>
  </div>
  <div>
    <ul>
      {{#each notable_publications}}
        <li>{{title}}</li>
        {{publisher}}
        <p>{{year}}</p>
      {{/each}}
    </ul>
  </div>
</section>

<hr>

<section>
  <div>
  <h2>Personal life:</h2>
  <ul>
    {{#each partners}}
    <li>{{name}}</li>
    {{relationship}}
   <p>{{years}}</p>
    {{/each}}
  </ul>
</section>

<hr>

<section>
  <div>
    <h2>Awards:</h2>
  </div>
  <div>
    {{#each awards}}
      <p>
        <strong>{{title}}</strong>
      </p>
      <p>{{year}}</p>
      <p>"{{description}}"</p>
    {{/each}}
  </div>

  <br>

  <div>
    <strong>
      <u>Influences:</u>
    </strong>
  </div>
  <div>
    <ul>
      {{#each influences}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  </div>

  <br />

  <div>
    <strong>
      <u>Influenced:</u>
    </strong>
  </div>
  <div>
    <ul>
      {{#each influenced}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  </div>

  <div>
    <h3>
      <u>Major discoveries and contributions:</u>
    </h3>
  </div>
  <div>
    <ul>
      {{#each major_discoveries}}
        <li>
          <b>{{title}}</b>
        </li>
        <p>{{year}}</p>
        <p>"{{description}}"</p>
      {{/each}}
    </ul>
  </div>
  <div>
    <ul>
      {{#with contributions}}
        <li>
          <b>{{title}}</b>
        </li>

        <p>{{year}}</p>
        <p>{{field}}</p>
        <p>"{{description}}"</p>
      {{/with}}
    </ul>
  </div>
</section>

<hr>
<section>
  <div>
    <h3>
      <u>Great quotes:</u>
    </h3>
  </div>
  <div>
    {{#each quotes}}
      <li>
        <q>{{this}}</q>
      </li>
    {{/each}}
  </div>
</section>

