<main>
    <section>
        {{#with navigation}}
            <div class="nav">
                {{#each links}}
                    <div class="nav-item">
                        <a href={{href}} class="nav-link {{#unless href}}disabled{{/unless}}">{{text}}</a>
                    </div>
                {{/each}}
            </div>
        {{/with}}
    </section>
    <div class="row">
        <h1>{{header}}</h1>
    <div class="col-8">
    <section>
       {{#with contacts_data}}
           <h3 class="mt-5">{{title}}</h3>
           {{#each buttons}}
                <button class="mt-3 me-1 btn {{#if isPrimary}}btn-warning text-light{{/if}} {{#if isOutline}}btn-outline-warning{{/if}}">{{text}}</button>
           {{/each}}
           {{#with form}}
                {{#with input}}
                 <div class="row mt-3">
                    {{#with surname}}
                       <div class="col-4">
                            <div>
                                <label class="form-label">{{label}}</label>
                                <input type="text" placeholder={{placeholder}} class="form-control">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        </div>
                    {{/with}}
                    {{#with name}}
                        <div class="col-4">
                            <div>
                                <label class="form-label">{{label}}</label>
                                <input type="text"  placeholder={{placeholder}} class="form-control ">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        </div>
                    {{/with}}
                     </div>
                     <div class="row mt-3 mb-4">
                    {{#with phone}}
                        <div class="col-4">
                            <div>
                                <label class="form-label">{{label}}</label>
                                <input type="tel" placeholder={{placeholder}} class="form-control">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        </div>
                    {{/with}}
                    {{#with email}}
                    <div class="col-3">
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input type="email"  placeholder={{placeholder}} class="form-control">
                            <div class="form-text">{{caption}}</div>
                        </div>
                    </div>
                    {{/with}}
                    </div>
                   <hr>
                {{/with}}
                {{#each switch}}
                    <div class="row">
                        <div class="col-8">
                            <div class="form-check form-switch">
                                <label class="form check-label">{{text}}</label>
                                <input  name="news" type="checkbox" class="form-check-input">
                            </div>
                        </div>
                    </div>
                {{/each}}
           {{/with}}
        {{/with}}
    </section>
    </div>
    <div class="col-4">
    <section>
       <div class="card">
                {{#each action_block }}
                    <div class="card-body p-1 pe-4">
                        <button class="btn 
                            {{#if isSuccess}} mt-2 btn-success btn-sm{{/if}} 
                            {{#if isDanger}}btn-danger btn-sm{{/if}}
                            {{#if isInfo}} mb-2 btn-info btn-sm{{/if}}">{{text}}</button>
                    </div>
                {{/each}}
        </div>
    </section>
    <section>
       {{#with total}}
            <div class="card p-2">
                <h4 class="mb-1">{{title}}</h4>
                   {{#each item_list}}
                        <p class="my-1">{{name}}: {{price}}</p>
                    {{/each}}
                        <hr class="my-1">
                    {{#each additional_info }}
                        <p class="my-1 ">{{text}}: {{value}}</p>
                    {{/each}} 
                        <hr class="my-1">
                    {{#with total_price}}
                           <p class="my-1">{{text}}: {{value}}</p>
                    {{/with}} 
                        <hr class="my-1">
                    {{#each button}}
                            <button class="btn {{#if isPrimary}}btn-primary btn-sm mt-1 mb-1{{/if}}{{#if isOutline}}btn-outline-primary btn-sm mt-1 mb-1 me-4{{/if}}">{{text}}</button>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        
    </section>


    </div>
</main>