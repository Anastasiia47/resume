<main>
    <section>
        {{#with navigation}}
            <div class="nav">
                {{#each links}}
                    <div class="nav-item">
                        <a href={{href}} class="nav-link {{#unless href}}disabled{{/unless}}">{{text}}</a>
                    </div>
                {{/each}}
            </div>
        {{/with}}
    </section>

    <section>
        <h1>{{header}}</h1>
        {{#with contacts_data}}
           <div class="display-6 mt-5">{{title}}</div>
           {{#each buttons}}
                <button class="mt-3 me-1 btn {{#if isPrimary}}btn-warning text-light{{/if}} {{#if isOutline}}btn-outline-warning{{/if}}">{{text}}</button>
           {{/each}}
           {{#with form}}
                {{#with input}}
                 <div class="row mt-3">
                    {{#with surname}}
                       <div class="col-4">
                            <div>
                                <label class="form-label">{{label}}</label>
                                <input type="text" class="form-control">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        </div>
                    {{/with}}
                    {{#with name}}
                        <div class="col-4">
                            <div>
                                <label class="form-label">{{label}}</label>
                                <input type="text" class="form-control ">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        </div>
                    {{/with}}
                     </div>
                     <div class="row mt-3 mb-4">
                    {{#with phone}}
                        <div class="col-4">
                            <div>
                                <label class="form-label">{{label}}</label>
                                <input type="tel" class="form-control">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        </div>
                    {{/with}}
                    {{#with email}}
                    <div class="col-3">
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input type="email" class="form-control">
                            <div class="form-text">{{caption}}</div>
                        </div>
                    </div>
                    {{/with}}
                    </div>
                   <hr>
                {{/with}}
           {{/with}}
        {{/with}}
    </section>
</main>