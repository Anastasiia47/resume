<main>
    <section>
        {{#with navigation}}
            <div class="nav">
                {{#each links}}
                    <div class="nav-item">
                        <a href={{href}} class="nav-link {{#unless href}}disabled{{/unless}}">{{text}}</a>
                    </div>
                {{/each}}
            </div>
        {{/with}}
    </section>
    <div class="row">
        <h1>{{header}}</h1>
    <div class="col-8">
   
       {{#with contacts_data}}
           <h3 class="mt-5">{{title}}</h3>
           {{#each buttons}}
                <button class="mt-3 me-1 btn {{#if isPrimary}}btn-warning text-light{{/if}} {{#if isOutline}}btn-outline-warning{{/if}}">{{text}}</button>
           {{/each}}
           {{#with form}}
                {{#with input}}
                 <div class="row mt-3">
                    {{#with surname}}
                       <div class="col-4">
                            <div>
                                <label class="form-label">{{label}}</label>
                                <input type="text" placeholder={{placeholder}} class="form-control">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        </div>
                    {{/with}}
                    {{#with name}}
                        <div class="col-4">
                            <div>
                                <label class="form-label">{{label}}</label>
                                <input type="text"  placeholder={{placeholder}} class="form-control ">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        </div>
                    {{/with}}
                     </div>
                     <div class="row mt-3 mb-4">
                    {{#with phone}}
                        <div class="col-4">
                            <div>
                                <label class="form-label">{{label}}</label>
                                <input type="tel" placeholder={{placeholder}} class="form-control">
                                <div class="form-text">{{caption}}</div>
                            </div>
                        </div>
                    {{/with}}
                    {{#with email}}
                    <div class="col-3">
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input type="email"  placeholder={{placeholder}} class="form-control">
                            <div class="form-text">{{caption}}</div>
                        </div>
                    </div>
                    {{/with}}
                    </div>
                   <hr>
                {{/with}}
                {{#each switch}}
                    <div class="row">
                        <div class="col-8">
                            <div class="form-check form-switch">
                                <label class="form check-label">{{text}}</label>
                                <input  name="news" type="checkbox" class="form-check-input">
                            </div>
                        </div>
                    </div>
                {{/each}}
           {{/with}}
        {{/with}}
   
    <hr>
    </div>
    <div class="col-4">
    
       <div class="card">
                {{#each action_block }}
                    <div class="card-body p-1 pe-4">
                        <button class="btn 
                            {{#if isSuccess}} mt-2 btn-success btn-sm{{/if}} 
                            {{#if isDanger}}btn-danger btn-sm{{/if}}
                            {{#if isInfo}} mb-2 btn-info btn-sm{{/if}}">{{text}}</button>
                    </div>
                {{/each}}
        </div>
 
   
       {{#with total}}
            <div class="card p-2">
                <h4 class="mb-1">{{title}}</h4>
                   {{#each item_list}}
                        <p class="my-1">{{name}}: {{price}}</p>
                    {{/each}}
                        <hr class="my-1">
                    {{#each additional_info }}
                        <p class="my-1 ">{{text}}: {{value}}</p>
                    {{/each}} 
                        <hr class="my-1">
                    {{#with total_price}}
                           <p class="my-1">{{text}}: {{value}}</p>
                    {{/with}} 
                        <hr class="my-1">
                    {{#each button}}
                            <button class="btn {{#if isPrimary}}btn-primary btn-sm mt-1 mb-1{{/if}}{{#if isOutline}}btn-outline-primary btn-sm mt-1 mb-1 me-4{{/if}}">{{text}}</button>
                    {{/each}}
                </div>
            </div>
            {{/with}}
   
    </div>
    </div>
    <div class="row">
    <div class="col-8">
        {{#with delivery}}
            <h3>{{title}}</h3>
            <div class="card mt-3">
                <div class="card-body">
                <div class="row">
                {{#each select}}
                    <div class="col-6">
                        <div>
                            <label class="form-label ">{{label}}</label>
                                <select class="form-select form-select-sm mb-1">
                                    <option selected>{{placeholder}}</option>
                                    {{#each options}}
                                        <option value={{value}}>{{text}}</option>
                                    {{/each}}
                            </select>
                        </div>
                    </div>
                {{/each}}
                </div>
                </div>
            </div>
            <div class="mt-3">
            {{#each delivery_type}}
            <div class="form-check">
                <label class="form-check-label">{{type}}</label>
                <input name="delivery" type="radio" class="form-check-input">
            </div>
            {{/each}}
            </div>
            <hr>
                {{#with payment}}
                    <h3>{{title}}</h3>
                    {{#each list}}
                        <div class="form-check">
                            <label class="form-label">{{type}}</label>
                            <input name="payment" type="radio" class="form-check-input">
                            <div class="form-text">{{description}}</div>
                        </div>
                    {{/each}}
                {{/with}}
                <hr>
                {{#with contact}}
                    <h3>{{title}}</h3>
                    <div class="row my-2">
                        {{#with surname}}
                            <div class="col-5 mb-2">
                                <div>
                                    <label class="form-label">{{label}}</label>
                                    <div class="form-contol">
                                        <input type="text" placeholder={{placeholder}}>
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                </div>
                            </div>
                        {{/with}}
                        {{#with name}}
                            <div class="col-5">
                                <div>
                                    <label class="form-label">{{label}}</label>
                                    <div class="form-contol">
                                        <input type="text" placeholder={{placeholder}}>
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                </div>
                            </div>
                        {{/with}}
                        {{#with phone}}
                            <div class="col-5">
                                <div>
                                    <label class="form-label">{{label}}</label>
                                    <div class="form-contol">
                                        <input type="" placeholder={{placeholder}}>
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                </div>
                            </div>
                        {{/with}}
                        {{#with email}}
                            <div class="col-4">
                                <div>
                                    <label class="form-label">{{label}}</label>
                                    <div class="form-contol">
                                        <input type="text" placeholder={{placeholder}}>
                                        <div class="form-text">{{caption}}</div>
                                    </div>
                                </div>
                            </div>
                        {{/with}}
                    </div>
                {{/with}}
                 <hr>
                    {{#with coment}}
                            <div class="col-12">
                                <label class="form-label">{{label}}</label>
                                        <input class="form-control" type="text" placeholder={{placeholder}}>
                            </div>
                    {{/with}}
             {{/with}}
        </div>
    </div>
    <div class="col-8">
    <hr class="mt-5">
    {{#with coupon}}
        <h3>{{title}}</h3>
        <div class="row">
        {{#with select}}
            <div class="col-8">
                {{#with availabel_coupon}}
                     <div>
                        <label class="form-label ">{{label}}</label>
                                <select class="form-select form-select-lg">
                                    <option selected>{{placeholder}}</option>
                                    {{#each options}}
                                        <option value={{value}}>{{text}}</option>
                                    {{/each}}
                            </select>
                        </div>
                {{/with}}
            </div>
            <div class="col-8 mt-2">
                {{#with friend_coupon}}
                     <div>
                        <label class="form-label ">{{label}}</label>
                                <select class="form-select form-select-sm">
                                    <option selected>{{placeholder}}</option>
                                    {{#each options}}
                                        <option value={{value}}>{{text}}</option>
                                    {{/each}}
                            </select>
                        </div>
                {{/with}}
            </div>
        {{/with}}
        {{#with add}}
            {{#with friend}}
                    <div class="col-8 mt-2">
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" type="text" placeholder={{placeholder}}>
                    </div>
            {{/with}}
            {{#with colleague }}
                    <div class="col-8 mt-2">
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" type="text" placeholder={{placeholder}}>
                    </div>
            {{/with}}
        {{/with}}
        </div>
    {{/with}}
    <hr class="mt-4">
    
    {{#with quiz}}
        <h3 class="mt-4">{{title}}</h3>
        {{#with preference}}
            <div class="form-check">
                {{#each options}}
                    <div class="form-check-label">{{title}}</div>
                    <input name="preference" class="form-check-input" type="radio">
                    <option>{{this}}</option> 
                {{/each}}
            </div>
        {{/with}}

        {{#with your_expirience}}
            <div class="mt-2">
                <label class="form-label">{{label}}</label>
                <input type="text" class="form-control">
            </div>
         {{/with}}

         {{#with purchase_frequency}}
            <label class="form-label mt-2">{{label}}</label>
                <select class="form-select">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                        <option value={{value}}>{{text}}</option>
                    {{/each}}
                </select>
         {{/with}}

         {{#with factors}}
           <div class="mt-2">
               <label class="form-check-label">{{title}}</label>
               {{#each options}}
                <div class="form-check">
                        <input type="checkbox" class="form-check-input">
                        <option>{{this}}</option>
                </div>
               {{/each}}
           </div>
         {{/with}}
    {{/with}}
   </div>
   <hr class="mt-5">
    <div class="col-12">
    <div class="nav">
         {{#each footer}}
             <div class="nav-item col-2">
                {{#each this}}
                     <a href={{link}} class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                {{/each}}
             </div>
         {{/each}}
     </div>
    </div>
   </div>
</main>