{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section class="m-4">
            {{>title data="All skills" big=true }} 
       <ul class="pt-2">
        {{#each skills}}
        <li>
           {{name}}

           {{#if point includeZero=true}}({{point}}){{/if}}
           {{#if isTop}}(top){{/if}}

           {{#unless point includeZero=true}}(не учим){{/unless}}

           {{#unless point}}
           {{#if point includeZero=true}}
           (еще учим)
           {{/if}}
           {{/unless}}
        </li>
        {{/each}}
       </ul> 
    </section>

    <section class="m-4">
        {{> title data= "My hobbies"  big=false}}
        <ol class="pt-2 ">
            {{#each hobbies}}
            <li>
                {{name}} 

             {{#if isMain}} 
             (favorite)
             {{/if}} 
            </li>
            {{/each}}
        </ol>
    </section>
    </main>
   {{/with}} 
</div>

