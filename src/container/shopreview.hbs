<main class="m-4">
    <div class="row">
        <div class="col-12">
            {{#with navigation}}
            <div class="nav">
                {{#each links}}
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link">{{text}}</a>
                </div>
                {{/each}}
            </div>
            {{/with}}

            <hr class="mt-5">

            <div class="row">
                <div class="col-8">
                    {{#with formBlock}}
                    <h1 class="mb-4">{{header}}</h1>
                    {{#with rating}}
                    <span>{{title}}:</span>
                    <span>{{value}}</span>
                    {{/with}}

                    {{#with actionBlock}}
                    <div class="nav nav-tabs mt-4 mb-5">
                        {{#each tabs}}
                        <div class="nav-item">
                            <a class="nav-link {{#if isActive}}active{{/if}}">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>

                    <hr class="mt-5 mb-5">

                    {{#with report}}
                    <div class="card ">
                        <div class="card-body">
                            <p>{{title}}</p>
                            {{#with button}}
                            <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                            {{/with}}
                        </div>
                    </div>
                    {{/with}}
                    {{/with}}

                    <hr class="mt-5 mb-4">



                    {{#with feedbackBlock}}
                    <h3>{{title}}</h3>
                    {{#each buttons}}
                    <a href="{{link}}" class="btn
                                {{#if isWarning}}btn-warning{{/if}}
                                {{#if isSuccess}}btn-success{{/if}}
                                {{#if isDanger}}btn-danger{{/if}} mt-5 mb-2 me-1">
                        {{text}}</a>
                    {{/each}}
                    {{/with}}

                    <hr class="mt-5">
                </div>


                <div class="col-4">
                    {{#with goodsInfo}}
                    <div class="card mb-3">
                        <div class="col-3 m-3">
                            <img class="card-img-top" src="{{photo}}" alt="photo">
                        </div>
                        <div class="card-body">
                            <p>{{name}}</p>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <p>{{price}}</p>
                            <p>{{#if inMarket}}Є в наявності{{/if}}</p>
                            {{#each buttons}}
                            <div>
                                <a href="{{link}}" class="btn
                            {{#if isPrimary}}btn-primary{{/if}}
                            {{#if isSecondary}}btn-secondary{{/if}}
                             mb-1">
                                    {{text}}</a>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    {{/with }}
                </div>
            </div>

            {{/with}}

            <div class="card">
                <div class="card-body">
                    {{#each reviewList}}

                    <div class="card mb-4">
                        <div class="card-header">
                            {{#with title}}
                            <p>{{userName}}</p>
                            <p>{{caption}}</p>
                            <p>{{date}}</p>
                            {{/with}}
                        </div>
                        <div class="card-body">
                            {{#with reviewBody}}
                            {{#with seller}}
                            {{title}}: {{value}}
                            {{/with}}
                            <div class="mt-2">
                                {{#with rating}}
                                {{title}}: {{value}}
                                {{/with}}
                            </div>
                            <div class="mt-3 mb-3">
                                {{#each text}}
                                {{this}}
                                {{/each}}
                            </div>
                            <div class="mt-2">
                                {{#with advantages}}
                                {{title}}: {{text}}
                                {{/with}}
                            </div>
                            <div class="mt-2">
                                {{#with disadvantages}}
                                {{title}}: {{text}}
                                {{/with}}
                            </div>
                            {{#each coments}}
                            <div class="card mb-2">
                                <div class="card-body">
                                    <p>{{userName}}</p>
                                    <p>{{date}}</p>
                                    <p>{{text}}</p>
                                </div>
                            </div>
                            {{/each}}
                            {{/with}}
                        </div>
                    </div>





                    {{/each}}
                </div>
            </div>



            {{#with service}}
            <div class="card text-bg-success text-center mt-5">
                <h2 class="card-title ms-3">{{title}}</h2>
                <div class="card-body">
                    <p>{{description}}</p>
                    {{#each buttons}}
                    <div class="mb-3">
                        <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/with}}

            <hr class="mt-5">

            <div class="nav">
                {{#each footer}}
                <div class="nav-item col-2">
                    {{#each this}}
                    <a href={{link}} class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                    {{/each}}
                </div>
                {{/each}}
            </div>



        </div>
    </div>
</main>