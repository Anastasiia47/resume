{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<section>
  <div>
    <h1>{{model}}</h1>
  </div>
  <div>
    <b>Automobile corporation: {{make}}</b>
  </div>
   <div>
    <b> Year: {{year}}</b>
  </div>
   <div>
    <em>Color: {{color}}</en>
  </div>
</section>

<hr>

<section>
  <div>
    <h2>Description:</h2>
  </div>

  <div>
    {{#with features}}
      {{#with interior}}
      <b>Seats:</b>
        {{#with seats}}
          <li>Material: {{material}}</li>
          <li> Color: {{color}}</li>
          <li>
            {{#if heated}}
              Heated +
            {{/if}}
          </li>
          <li>
            {{#if  ventilated}}
               Ventilated +
            {{/if}}
          </li>
        {{/with}}
        
        <br>
       
        <b>Dashboard:</b>
        {{#with dashboard}}
        <li>Material:{{material}}</li>
        <li>Color:{{color}}</li>
        <br>
        <u>Dispalay:</u>
        {{#with display}}
        <br>
        <span>{{type}}</span>
        <br>
        <span>Size:{{size}}</span>
        <br>
        <span>Resolution:{{resolution}}</span>
        {{/with}}
        {{/with}}

        <br>
        <br>

         <u>Audio:</u>
        {{#with audio}}
        <br>
        <span>{{system}}</span>
        <br>
        <span> Speakers: {{speakers}}</span>
        <br>
         {{#if subwoofer}}
             Subwoofer +
        {{/if}}
        <br>
         {{#if bluetooth}}
             Bluetooth +
        {{/if}}
      {{/with}}
      {{/with}}

     <br>
     <br>

     <b>Exterior:</b>
        {{#with exterior}}
        {{#with wheels}}
         <br>
         <u>Wheels:</u>
        <li>Size: {{size}}</li>
        <li>Type: {{type}}</li>
        <li>Color: {{color}}</li>
        {{/with}}

        <br>

       {{#with headlights}}
        <u>Headlights:</u>
        <li>Type: {{type}}</li>
        <li>Brightness: {{brightness}}</li>
        {{/with}}

        <br>

        {{#with sunroof}}
        <u>Sunroof:</u>
        <li>Type: {{type}}</li>
        <li>Size: {{size}}</li>
        <li>
          {{#if automatic}}
          Automatic +
          {{/if}}
        </li>
        {{/with}}
{{/with}}
{{/with}}
</div>
</section>





